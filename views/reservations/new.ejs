	<link href="https://fonts.googleapis.com/css2?family=Playfair+Display+SC:ital@1&display=swap" rel="stylesheet">
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
	<style media="screen">

.container {
	width: 700px;
  border-radius: 5px;
  background-color: #eeeeee;
  padding: 20px;
}
input, select, textarea {
	display: inline-table;
  width: 100%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 4px;
  resize: vertical;
}

	h1 {
		padding: 35px;
		font-family: 'Playfair Display SC', serif;
	}
	label {
  padding: 12px 12px 12px 0;
  display: inline-block;
}

	li {
		list-style-type: none;
	}

	h2 {
		padding: 10px;
		margin-top: 150px;
		font-family: 'Cinzel Decorative', cursive;
	}

	</style>
</head>

<body>
	<header>
		<h1>Make a reservation</h1>
		<nav>
			<ul>
				<li>
					<nav class="navbar navbar-expand-lg navbar-light bg-light">
						<a class="navbar-brand" href="#"></a>
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse" id="navbarText">
							<ul class="navbar-nav mr-auto">
								<li class="nav-item active">
									<a class="nav-link" href="/HOME">Home <span class="sr-only">(current)</span></a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="/MENU">MENU</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="/ABOUT">ABOUT</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="/RESERVATIONS/index">RESERVATIONS</a>
								</li>
							</ul>

						</div>
					</nav>
				</li>
			</ul>
		</nav>
	</header>
	<main class="container">

		<form action="/reservations/index/" method="POST">
			<ul>
				<li>
					<label for="name">Name:</label>
					<input type="text" id="name" name="name" placeholder="Name" />
				</li>
				<li>
					<label for="email">E-mail:</label>
					<input type="email" id="email" name="email" placeholder="Email" />
				</li>
				<li>
					<label for="phone">Phone:</label>
					<input type="phone" id="phone" name="phone" placeholder="Phone" />
				</li>
				<li>
					<label for="date">Date:</label>
					<input type="date" id="date" name="date" placeholder="Date"/>
				</li>
				<li>
					<label for="seating">Seating:</label>
					<input type="seating" id="seating" name="seating" Placeholder=" Seating" />
				</li>
				<li>
					<label for="msg">Message:</label>
					<textarea id="msg" name="message"></textarea>
				</li>

				<input type="submit" name="submit" value="SUBMIT">
	</main>
</body>

